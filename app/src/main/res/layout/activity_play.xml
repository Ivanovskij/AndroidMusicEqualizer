<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ioadmin.lab4_1.PlayActivity">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/btnStartPlay" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnPlay"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/btnNext" />

    <Button
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPlay"
        android:layout_alignBottom="@+id/btnPlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="@string/btnPrev" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="120dp">

        <!-- Equailizer -->
        <TextView
            android:id="@+id/bass_boost_label"
            android:textSize="17dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Bass boost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="-8dp"/>

        <SeekBar
            android:id="@+id/bass_boost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:progress="50"/>

        <TextView
            android:id="@+id/slider_label_1"
            android:textSize="17dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="30Hz-120Hz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="-8dp"/>

        <SeekBar
            android:id="@+id/slider_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:progress="50"/>

        <TextView
            android:id="@+id/slider_label_2"
            android:textSize="17dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="120Hz-460Hz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="-8dp"/>

        <SeekBar
            android:id="@+id/slider_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:progress="50"/>

        <TextView
            android:id="@+id/slider_label_3"
            android:textSize="17dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="460Hz-1kHz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="-8dp"/>

        <SeekBar
            android:id="@+id/slider_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:progress="50"/>

        <TextView
            android:id="@+id/slider_label_4"
            android:textSize="17dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="1kHz-7kHz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="-8dp"/>

        <SeekBar
            android:id="@+id/slider_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:progress="50"/>

        <TextView
            android:id="@+id/slider_label_5"
            android:textSize="17dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="7kHz~"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="-8dp"/>

        <SeekBar
            android:id="@+id/slider_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:progress="50"/>

        <Button
            android:id="@+id/flat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</RelativeLayout>
